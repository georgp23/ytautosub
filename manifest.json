{
  "manifest_version": 3,
  "name": "YT autosub",
  "version": "1.0",
  "description": "Automatically enables subtitles on YouTube videos",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["*://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Auto Subtitles"
  }
}
